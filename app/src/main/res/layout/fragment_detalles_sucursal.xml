<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="20dp"
    tools:context=".ui.tiendas.DetallesSucursalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
               android:id="@+id/ib_img_sucursal_det_sucursal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_businness"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:text="Editar esto con datos de tienda\nComo nombre, horario, lugar"
                android:textSize="18dp"/>
        </LinearLayout>

        <!--Nombre-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_business" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_nombre_sucursal_det_sucursal"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/myriadproregular"
                    android:hint="@string/nombre"
                    android:inputType="text"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <!--DirecciÃ³n-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_location" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_direccion_det_sucursal"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/myriadproregular"
                    android:hint="@string/nombre"
                    android:inputType="text"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <!--Horario-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_calendar" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_hora_apertura_det_sucursal"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/myriadproregular"
                    android:hint="@string/nombre"
                    android:inputType="text"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal"
           android:padding="5dp">

            <ImageView
               android:layout_width="50dp"
               android:layout_height="match_parent"
               android:src="@drawable/ic_calendar" />

            <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/til_hora_cierre_det_sucursal"
               android:layout_width="250dp"
               android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:fontFamily="@font/myriadproregular"
                   android:hint="@string/nombre"
                   android:inputType="text"
                   android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
           android:id="@+id/mb_admin_productos_det_sucursal"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:text="@string/adminProductos"
            android:fontFamily="@font/myriadproregular"
            android:textSize="20dp"/>

        <LinearLayout
           android:id="@+id/ll_elim_edit_sucursal_det_sucursal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
               android:id="@+id/mb_eliminar_det_sucursal"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:fontFamily="@font/myriadproregular"
                android:textSize="18dp"
                android:layout_margin="25dp"
                android:text="@string/eliminarBtn"/>

            <com.google.android.material.button.MaterialButton
               android:id="@+id/mb_editar_det_sucursal"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:fontFamily="@font/myriadproregular"
                android:textSize="18dp"
                android:layout_margin="25dp"
                android:text="@string/editarBtn"/>
        </LinearLayout>

        <LinearLayout
           android:id="@+id/ll_desc_guard_datos_sucursal_det_sucursal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center">
            <com.google.android.material.button.MaterialButton
               android:id="@+id/mb_descartar_det_sucursal"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:fontFamily="@font/myriadproregular"
               android:textSize="18dp"
               android:layout_margin="25dp"
               android:text="@string/eliminarBtn"/>

            <com.google.android.material.button.MaterialButton
               android:id="@+id/mb_guardar_det_sucursal"
               android:layout_width="125dp"
               android:layout_height="50dp"
               android:fontFamily="@font/myriadproregular"
               android:textSize="18dp"
               android:layout_margin="25dp"
               android:text="@string/editarBtn"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>